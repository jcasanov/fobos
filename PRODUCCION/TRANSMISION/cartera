set `logname`
if [ $1 != fobos ] ; then
	echo 'Solo usuario fobos puede correr este proceso.'
	exit
fi
clear
export DIR="$HOME/PRODUCCION/TRANSMISION/"
echo 'CARGA DE CARTERA POR COBRAR DE DITCA QUITO A DITECA MATRIZ'
echo '---------------------------------------------------------'
echo ''
echo 'Este proceso descarga de Diteca Quito la cartera por cobrar,'
echo 'facturas y notas de debito, con saldo mayor a 0. Y la carga a la base'
echo 'de datos de Diteca Matriz.'
echo 'Este proceso puede ser ejecutado en cualquier momento.'
echo ''
echo -n 'Conecte modem al Sur y presione <Enter>'
read a
echo ''
cd
echo 'Entrando al directorio: ' $DIR 
cd $DIR
echo 'Borrando files viejos...'
rm tr_cxct001.txt tr_cxct002.txt tr_cxct020.txt
export INFORMIXSERVER=server_qm
echo 'Ejecutando programa de descarga de datos de la base acero_qs...'
fglrun desc_cob

echo 'Copiando file tr_cxct020.txt a Quito...'
rcp tr_cxct020.txt server_qm:/FOBOS/PRODUCCION/TRANSMISION/

echo 'Copiando file tr_cxct001.txt a Quito...'
rcp tr_cxct001.txt server_qm:/FOBOS/PRODUCCION/TRANSMISION/

echo 'Copiando file tr_cxct002.txt a Quito...'
rcp tr_cxct002.txt server_qm:/FOBOS/PRODUCCION/TRANSMISION/

echo 'Copiando file tr_cxct021.txt a Quito...'
rcp tr_cxct021.txt server_qm:/FOBOS/PRODUCCION/TRANSMISION/

echo 'Copiando file tr_cxct022.txt a Quito...'
rcp tr_cxct022.txt server_qm:/FOBOS/PRODUCCION/TRANSMISION/

echo 'Copiando file tr_cxct023.txt a Quito...'
rcp tr_cxct023.txt server_qm:/FOBOS/PRODUCCION/TRANSMISION/

export INFORMIXSERVER=ol_server
echo 'Ejecutando programa que carga datos a la base acero_gm...'
fglgo carga_doc
echo 'Proceso terminado Ok.'
echo '*** OJO  No olvide cerrar conexion del modem. ***'
echo -n 'Presione cualquier tecla.'
read a
