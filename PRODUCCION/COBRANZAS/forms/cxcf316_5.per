{

  Fecha Inicial: [c000      ]                        Fecha Final: [c001      ]
       Vendedor: [c1 ]  [c002                          ]
        Cliente: [c003  |c004                                                ]
                                                            [c005 ] de [c006 ]
 [c2|c3|c4|c010  |c011      |c5|c012        |c013               |c014         ]
[c6|c7|c8|c020  |c021      |c9|c022        |c023               |c024         ]
[c6|c7|c8|c020  |c021      |c9|c022        |c023               |c024         ]
[c6|c7|c8|c020  |c021      |c9|c022        |c023               |c024         ]
[c6|c7|c8|c020  |c021      |c9|c022        |c023               |c024         ]
[c6|c7|c8|c020  |c021      |c9|c022        |c023               |c024         ]
[c6|c7|c8|c020  |c021      |c9|c022        |c023               |c024         ]
[c6|c7|c8|c020  |c021      |c9|c022        |c023               |c024         ]
[c6|c7|c8|c020  |c021      |c9|c022        |c023               |c024         ]
