c11  = FORMONLY.num_row, NOENTRY, REVERSE, UPSHIFT;
c12  = FORMONLY.max_row, NOENTRY, REVERSE, UPSHIFT;

c020 = FORMONLY.tit_col1, WIDGET = 'BUTTON', CONFIG = 'F15';
