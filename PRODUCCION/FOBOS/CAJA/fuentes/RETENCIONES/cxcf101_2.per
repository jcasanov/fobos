c034 = ordt003.c03_concepto_ret, NOENTRY, SCROLL, OPTIONS = '-nolist';
h    = ordt003.c03_tipo_fuente, NOENTRY, UPSHIFT, OPTIONS = '-nolist';
i    = cxct008.z08_defecto, AUTONEXT, UPSHIFT,
	WIDGET = 'CHECK', CONFIG = 'S N Acknowledge', DEFAULT = 'N',
	OPTIONS = '-nolist';
j    = cxct008.z08_flete, AUTONEXT, UPSHIFT,
	WIDGET = 'CHECK', CONFIG = 'S N Acknowledge', DEFAULT = 'N',
	OPTIONS = '-nolist';

c040 = FORMONLY.descripcion_sri, NOENTRY, REVERSE;
