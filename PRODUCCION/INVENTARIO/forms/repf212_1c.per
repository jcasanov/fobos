[b4        |b5        |b6    ] [b7           |b8            |b9              ]
[b4        |b5        |b6    ] [b7           |b8            |b9              ]
[b4        |b5        |b6    ] [b7           |b8            |b9              ]
[b4        |b5        |b6    ] [b7           |b8            |b9              ]
