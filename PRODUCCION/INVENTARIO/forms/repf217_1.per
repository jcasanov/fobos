c15 = rept020.r20_cant_ven,  REVERSE, NOENTRY, OPTIONS = '-nolist',
	FORMAT = '#####&.##';
c16 = rept020.r20_cant_dev,  REVERSE, INCLUDE = (0.00 TO 999999.99),
	OPTIONS = '-nolist', FORMAT = '#####&.##';
