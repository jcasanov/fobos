b4  = FORMONLY.tit_col5, WIDGET = 'BUTTON', CONFIG = 'F20';
b5  = FORMONLY.tit_col6, WIDGET = 'BUTTON', CONFIG = 'F21';
b6  = FORMONLY.tit_col7, WIDGET = 'BUTTON', CONFIG = 'F22';

a   = rept019.r19_tipo_dev, REVERSE, NOENTRY, UPSHIFT;
