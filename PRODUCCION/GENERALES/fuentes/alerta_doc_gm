. /acero/envfobos.sh
export ruta=$INFORMIXSERVER
export INFORMIXSERVER=ACGYE01
MSG_FA=`fglgo veri_doc acero_gm 1 1 30 FA`
MSG_NV=`fglgo veri_doc acero_gm 1 1 30 NV`
MSG_NC=`fglgo veri_doc acero_gm 1 1 30 NC`
MSG_ND=`fglgo veri_doc acero_gm 1 1 30 ND`
MSG_SRI_FA=`fglgo docsri acero_gm 1 FA`
MSG_SRI_NV=`fglgo docsri acero_gm 1 NV`
MSG_SRI_NC=`fglgo docsri acero_gm 1 NC`

if [ "$MSG_FA" ]; then
echo $MSG_FA|smbclient  -I 192.168.4.100 -M sistemas
echo $MSG_FA|smbclient  -I 192.168.4.98 -M fobosadmin
echo $MSG_FA|smbclient  -I 192.168.1.34 -M sistem_analisis
echo $MSG_FA|smbclient  -I 192.168.1.20 -M Dpto-conta-fact
echo $MSG_FA|mail -s "ALERTA !!!"  nelson  francisco
fi

if [ "$MSG_NV" ]; then
