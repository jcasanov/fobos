echo $MSG_ND|smbclient  -I 192.168.4.98 -M fobosadmin
echo $MSG_ND|smbclient  -I 192.168.1.34 -M sistem_analisis
echo $MSG_ND|smbclient  -I 192.168.1.20 -M Dpto-conta-fact
echo $MSG_ND|mail -s "ALERTA !!!"  nelson  francisco
fi

if [ "$MSG_SRI_FA" ]; then
