	WIDGET = 'CHECK', CONFIG = 'S N Acknowledge';

c008 = rolt044.n44_cod_trab,    OPTIONS='-nolist', NOENTRY;
c102 = FORMONLY.n_trab,         OPTIONS='-nolist', NOENTRY;
