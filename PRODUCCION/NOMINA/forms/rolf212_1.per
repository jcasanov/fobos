c014 = rolt043.n43_usuario, UPSHIFT, REVERSE, NOENTRY;
c015 = rolt043.n43_fecing , REVERSE, NOENTRY;

a0 = rolt043.n43_moneda,        REVERSE, AUTONEXT, UPSHIFT,
                                WIDGET='FIELD_BMP', CONFIG='lista.bmp F2';
c101 = FORMONLY.n_moneda,                NOENTRY;
c    = rolt043.n43_tributa, AUTONEXT, UPSHIFT, REVERSE, DEFAULT = 'S',
